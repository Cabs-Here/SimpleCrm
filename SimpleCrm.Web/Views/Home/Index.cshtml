<!-- /Views/Home/Index.cshtml -->
@using SimpleCrm.Web.Controllers
@model HomePageViewModel
@{
    ViewBag.Title = "Customers Page";
}

<h1>Customers</h1>

<table>
    @foreach (var customer in Model.Customers)
    {
    <tr>
        <td><a asp-controller="Home" asp-action="Details" asp-route-id="@customer.Id">Details</a></td>
        <td>@customer.FirstName</td>
        <td>@customer.LastName</td>
        <td>@customer.PhoneNumber</td>
    </tr>
    }
</table>
<br />
<a asp-action="Create" asp-controller="Home">Create a Customer</a>

@section footer {
    <p>@Model.CurrentMessage</p>
}

